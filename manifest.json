{
	"name": "JRpan Extension",
	"version": "1.0",
	"description": "JRpan based extension for japanese text tokenization.",
	"permissions": [
		"tabs",
		"http://*/*",
		"https://*/*",
		"activeTab",
		"declarativeContent",
		"storage"
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png"
	},
	"manifest_version": 2
}
